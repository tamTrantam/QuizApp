# ===========================================
# ENVIRONMENT VARIABLES FOR RENDER DEPLOYMENT
# Copy this file to .env and fill in your values
# ===========================================

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# Database Configuration (PostgreSQL on Render)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Alternative Database Settings (if not using DATABASE_URL)
DB_NAME=effio_ielts_db
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_HOST=127.0.0.1
DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static Files (for Render)
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Media Files (Local development fallback)
MEDIA_URL=/media/
MEDIA_ROOT=media

# ========================================
# CLOUDINARY CONFIGURATION (Recommended for Production)
# ========================================
# Get these credentials from https://cloudinary.com/console
# Free tier includes 25GB storage and 25GB monthly bandwidth
USE_CLOUDINARY=True
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# AllAuth Settings
ACCOUNT_EMAIL_VERIFICATION=none
ACCOUNT_LOGIN_METHODS=email